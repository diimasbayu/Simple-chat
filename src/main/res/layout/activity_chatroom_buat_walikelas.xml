<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/activity_chatroom_buat_walikelas"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/txtJudul29"
            android:text="SELAMAT DATANG BAPAK/IBU WALI KELAS"
            android:textSize="31dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtJudul29"
            android:id="@+id/txtJudul30"
            android:layout_marginTop="40dp"
            android:text="DIMOHON BAPAK/IBU UNTUK SEGERA MENDAFTARKAN ROOM CHAT DENGAN NAMA KELAS"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtJudul30"
            android:id="@+id/editBuatRoom"
            android:hint="masukkan nama kelas"
            android:background="#ffffff"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="text"
            />

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editBuatRoom"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/btnBuatRoom"
            android:text="DAFTARKAN"
            android:textSize="20dp"
            android:background="#ffffff"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnBuatRoom"
            android:layout_marginTop="25dp"
            android:text="MENU ACTION WALIKELAS"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/txtJudul43"
            />
        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtJudul43"
            android:layout_marginTop="20dp"
            android:text="PILIH ROOM CHAT YANG TERSEDIA"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:id="@+id/btnPilihRoomChat_walikelas"
            />

        <!--<android.support.v7.widget.AppCompatButton-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/btnPilihRoomChat_walikelas"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:text="HAPUS ROOM CHAT"-->
            <!--android:textSize="20dp"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:background="#ffffff"-->
            <!--android:id="@+id/btnHapusRoomChat"-->
            <!--/>-->

    </RelativeLayout>
</ScrollView>
