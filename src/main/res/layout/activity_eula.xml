<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:paddingBottom="16dp"
        android:padding="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:id="@+id/activity_eula_walikelas"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtJudul19"
            android:text="EULA"
            android:textSize="35dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtJudul19"
            android:text="END USER LICENSE AGREEMENT"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/txtJudul20"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtJudul20"
            android:layout_marginTop="15dp"
            android:text="PERSETUJUAN UNTUK PENGGUNA APLIKASI"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/txtJudul20a"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtJudul21"
            android:layout_below="@+id/txtJudul20a"
            android:layout_marginTop="30dp"
            android:text="1. Pengembang aplikasi tidak menyimpan data mengenai wali kelas/ wali muird. Kehilangan atau penyalahgunaan data yang tersimpan dalam aplikasi diluar tanggung jawab pengembang aplikasi"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtJudul22"
            android:layout_below="@+id/txtJudul21"
            android:layout_marginTop="30dp"
            android:text="2. Pengguna aplikasi wajib menjaga kerahasiaan berupa Nomor Induk atau Nomor Induk Siswa Nasional dan password. "
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtJudul23"
            android:layout_below="@+id/txtJudul22"
            android:layout_marginTop="30dp"
            android:text="3. Pengguna aplikasi dimohonkan untuk hanya menggunakan tutur kata yang baik dan sopan untuk menjaga keharmonisan antar pengguna aplikasi. "
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
</ScrollView>
