<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:id="@+id/activity_detail_data"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/icon_pu"
            android:id="@+id/icon_pu"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_pu"
            android:id="@+id/txtJudul32"
            android:text="DATA INFORMASI"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="31dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtJudul33"
            android:layout_below="@+id/txtJudul32"
            android:layout_marginTop="20dp"
            android:text="BAPAK/IBU TERGABUNG DENGAN NAMA ROOM CHAT"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDetailData_namaRoomChat"
            android:layout_below="@+id/txtJudul33"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:textSize="28dp"
            android:textStyle="bold|italic"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtJudul34"
            android:layout_below="@id/txtDetailData_namaRoomChat"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="BERIKUT DATA BAPAK/IBU"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDetailData_user"
            android:layout_below="@+id/txtJudul34"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/txtMenu_detailData"
            android:text="MENU"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:clickable="true"
            />

    </RelativeLayout>
</ScrollView>
