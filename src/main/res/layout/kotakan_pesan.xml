<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAD2"
    android:paddingTop="3dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingBottom="3dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/KotakanLinear1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPengirimPesan"
            android:textStyle="bold|italic"
            android:text="pengirimPesan"
            android:textSize="17dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  -----  "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtIsiPesan"
            android:layout_marginLeft="5dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/txtWaktuDikirim"
            android:text="waktuDikirin"
            android:layout_gravity="right"
            android:textSize="15dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/KotakanLinear2"
        android:orientation="vertical"
        android:layout_below="@+id/KotakanLinear1"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/txtIsiPesan"
            android:textSize="20dp"
            android:text="ISIPesan"
            />
    </LinearLayout>

</RelativeLayout>