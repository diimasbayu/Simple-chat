<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/activity_chatroom_pilih_walimurid"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/txtJudul31"
            android:text="SELAMAT DATANG BAPAK/IBU"
            android:textSize="31dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtJudul31"
            android:layout_marginTop="40dp"
            android:id="@+id/txtJudul32"
            android:text="DIMOHON BAPAK/IBU UNTUK SEGERA MEMILIH ROOM CHAT"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtJudul32"
            android:id="@+id/txtJudul32a"
            android:layout_marginTop="40dp"
            android:text="DAFTAR CHAT ROOM YANG TERSEDIA"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/txtJudul32a"
            android:id="@+id/listRoomChat"
            android:background="#ffffff"
            >
        </ListView>


    </RelativeLayout>
</ScrollView>
