<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:id="@+id/activity_daftar_walimurid"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAFTAR SEBAGAI WALI MURID"
            android:textSize="31dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/txtjudul14"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MASUKKAN NOMOR INDUK SISWA NASIONAL"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:id="@+id/txtJudul15"
            android:layout_below="@+id/txtjudul14"
            />

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="masukkan nomor nisn"
            android:textSize="20dp"
            android:background="#ffffff"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtJudul15"
            android:id="@+id/editDaftarWaliMuridNISN"
            android:inputType="numberDecimal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MASUKKAN NAMA LENGKAP SISWA"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:id="@+id/txtJudul16"
            android:layout_below="@+id/editDaftarWaliMuridNISN"
            />

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="masukkan nama lengkap siswa"
            android:textSize="20dp"
            android:inputType="text"
            android:background="#ffffff"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/editDaftarWaliMuridNamaSiswa"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtJudul16"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editDaftarWaliMuridNamaSiswa"
            android:text="MASUKKAN NAMA LENGKAP ANDA SEBAGAI WALI MURID"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginTop="24dp"
            android:id="@+id/txtJudul17"
            />

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="masukkan nama lengkap anda"
            android:textSize="20dp"
            android:inputType="text"
            android:background="#ffffff"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtJudul17"
            android:id="@+id/editDaftarWaliMuridNama"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MASUKKAN PASSWORD"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:id="@+id/txtJudul18"
            android:layout_below="@+id/editDaftarWaliMuridNama"
            />

        <android.support.v7.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="masukkan password"
            android:textSize="20dp"
            android:background="#ffffff"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/editDaftarWaliMuridPass"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtJudul18"
            android:inputType="textVisiblePassword"
            />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editDaftarWaliMuridPass"
            android:id="@+id/chkEulaWaliMurid"
            android:layout_marginTop="20dp"
            android:text="Saya sudah membaca eula dan menyetujuinya"
            android:background="#ffffff"
            android:clickable="true"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtEula_walimuird"
            android:layout_below="@+id/chkEulaWaliMurid"
            android:layout_marginTop="20dp"
            android:text="Mohon baca : EULA disini"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:clickable="true"
            />


        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BERIKUTNYA"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#ffffff"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/txtEula_walimuird"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnDaftarWaliMurid_2"
            android:clickable="true"
            />
    </RelativeLayout>
</ScrollView>
